<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/jquery-3.5.1.min.js"></script>
  <title>Admin</title>
</head>

<body>
  <div class="container">
    <h1 class="title">Admin</h1>
    <a href="/admin/register" class="btn btn-success float-left m-2">register</a>
    <table class="table">
      <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% admins.forEach(function(item){ %>
        <tr class="student">
            <th scope="row"><%- item._id %></th>
            <th scope="row"><%- item.email %></th>
            <th scope="row"><%- item.password %></th>
          <th scope="row"><%- item.name %></th>
          <td>

            <a href="/classes/edit/<%-item._id%>" class="btn btn-primary">Edit</a>
            <form action="/classes/delete/<%= item._id %>" method="get" class="d-inline">
              <button type="submit" onclick="return confirm('Are you sure you want to delete <%- item.name %>') "
                class="btn btn-danger">Delete</button>
            </form>

          </td>
          <td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>